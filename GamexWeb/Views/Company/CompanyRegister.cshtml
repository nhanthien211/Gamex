@model GamexService.ViewModel.CompanyRegisterViewModel

@{
    ViewBag.Title = "Company Register";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

@section scripts
{

    @if (Model != null && Model.IsSuccessful.HasValue)
    {
        if (Model.IsSuccessful.Value)
        {
            <script type="text/javascript">
                $('#successModal').modal();
            </script>
        }
        else
        {
            <script type="text/javascript">
                $('#error-message').html('@Model.ErrorMessage');
                $('#failModal').modal();
            </script>
        }
    }
}

<div class="row">
    <div class="col-sm-12 text">
        <img src="~/Content/img/icons/logo1.png" alt="" width="120px">
        <div class="description">
            <h3>Company Registration</h3>
            <p>We do not find any company associated with that tax number</p>
            <p>Please complete the form below to get started</p>
        </div>
    </div>
</div>

@using (Html.BeginForm("CompanyRegister", "Company", FormMethod.Post, new
{
    @class = "register-form"
}))
{
    @Html.AntiForgeryToken()
    <section>

        <h6 class="register-title">Company Information</h6>


        <div class="row for-input-row">
            <div class="col-sm-12 col-md-7 col-lg-7">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new
                {
                    @class = "form-control form-control-sm"
                })
                @Html.ValidationMessageFor(m => m.Name)
            </div>

            <div class="col-sm-12 col-md-5 col-lg-5">
                @Html.LabelFor(m => m.TaxNumber)
                @Html.TextBoxFor(m => m.TaxNumber, new
           {
               @class = "form-control form-control-sm"
           })
                @Html.ValidationMessageFor(m => m.TaxNumber)
            </div>
        </div>

        <div class="row for-input-row">
            <div class="col-sm-12 col-md-4 col-lg-4">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new
           {
               @class = "form-control form-control-sm"
           })
                @Html.ValidationMessageFor(m => m.Email)
            </div>

            <div class="col-sm-12 col-md-4 col-lg-4">
                @Html.LabelFor(m => m.Phone)
                @Html.TextBoxFor(m => m.Phone, new
                {
                    @class = "form-control form-control-sm"
                })
                @Html.ValidationMessageFor(m => m.Phone)
            </div>

            <div class="col-sm-12 col-md-4 col-lg-4">
                @Html.LabelFor(m => m.Website)
                @Html.TextBoxFor(m => m.Website, new
                {
                    @class = "form-control form-control-sm"
                })
                @Html.ValidationMessageFor(m => m.Website)
            </div>
        </div>

        <h6 class="register-title">Contact Information</h6>

        <div class="row for-input-row">
            <div class="col-sm-12 col-md-4 col-lg-4">
                @Html.LabelFor(m => m.EmployeeEmail)
                @Html.TextBoxFor(m => m.EmployeeEmail, new
                {
                    @class = "form-control form-control-sm",
                    @placeholder = "Sign in with this email when approved"
                })
                @Html.ValidationMessageFor(m => m.EmployeeEmail)
            </div>
            <div class="col-sm-12 col-md-4 col-lg-4">
                @Html.LabelFor(m => m.FirstName)
                @Html.TextBoxFor(m => m.FirstName, new
                {
                    @class = "form-control form-control-sm"
                })
                @Html.ValidationMessageFor(m => m.FirstName)
            </div>
            <div class="col-sm-12 col-md-4 col-lg-4">
                @Html.LabelFor(m => m.LastName)
                @Html.TextBoxFor(m => m.LastName, new
                {
                    @class = "form-control form-control-sm"
                })
                @Html.ValidationMessageFor(m => m.LastName)
            </div>
        </div>

        <div class="row" style="display: flex; justify-content: center;">
            <button class="login-button" type="submit">Submit</button>
        </div>
    </section>
}

<div id="successModal" class="modal fade">
    <div class="modal-dialog modal-confirm">
        <div class="modal-content">
            <div class="modal-header">
                <div class="icon-box-success">
                    <i class="fas fa-check"></i>
                </div>
                <h4 class="modal-title">Success!</h4>
            </div>
            <div class="modal-body">
                <p class="text-center">Submit successfully</p>
                <p class="text-center">You will receive email when your request is approved</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-success btn-block" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

<div id="failModal" class="modal fade">
    <div class="modal-dialog modal-confirm">
        <div class="modal-content">
            <div class="modal-header">
                <div class="icon-box-fail">
                    <i class="fas fa-times"></i>
                </div>
                <h4 class="modal-title">Error!</h4>
            </div>
            <div class="modal-body">
                <p class="text-center">Submit unsuccessfully</p>
                <p class="text-center" id="error-message"></p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger btn-block" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>




