
@{
    ViewBag.Title = "Profile";

    ViewBag.Info = "active";
    ViewBag.Account = "";
    ViewBag.Order = "";
    ViewBag.Watch = "";

    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section scripts {
    <script type="text/javascript">
        function clearContent() {
            $('#changePasswordMessage').html('');
        }
        
        $('#change-password-button').click(function () {
            $('#passwordModal').modal('show');
        });
      
    </script>
}

<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item active">Profile</li>
    </ol>

    <!-- Content-->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-fw fa-user "></i> Profile
            
        </div>
        <div class="card-body">
            <!-- FORM CHỈNH SỬA: ======================================================= -->

            @using (@Html.BeginForm("", "Account", FormMethod.Post, new { @class = "to-validate", novalidate = "" }))
            {
                <!-- ROW FIRST - LAST NAME: required, 2-30 characters -->
                <div class="row for-input-row" style="font-weight: bold">
                    <div class="col-sm-6">
                        <label for="FName">First Name *</label>
                        <input class="form-control form-control-sm" type="text" name="firstName" value="abc" required pattern=".{2,30}" onblur="$(this).val($(this).val().replace(/^\s+$/,''));">
                        <div class="invalid-feedback" style="font-size: 15px;">
                            Invalid First Name (2 - 30 characters)
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <label for="LName">Last Name *</label>
                        <input class="form-control form-control-sm" type="text" name="lastName" value="abc" required pattern=".{2,30}" onblur="$(this).val($(this).val().replace(/^\s+$/,''));">
                        <div class="invalid-feedback" style="font-size: 15px;">
                            Invalid Last Name (2 - 30 characters)
                        </div>
                    </div>
                </div>


                <div class="row for-input-row" style="font-weight: bold">

                    <div class="col-sm-6">
                        <label for="Phone">Phone *</label>
                        <input class="form-control form-control-sm" type="text" name="phone" value="abc" required pattern=".{8,11}[0-9]">
                        <div class="invalid-feedback" style="font-size: 15px;">
                            Invalid Phone Number (8 - 11 numbers)
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <label for="DOB">DOB</label>
                        <!-- set "date" value with format yyyy-MM-dd -->
                        @*                         @{ *@
                        @*                             string dob = ""; *@
                        @*                             if (Model.DOB.HasValue) *@
                        @*                             { *@
                        @*                                 dob = Model.DOB.Value.ToString("yyyy-MM-dd"); *@
                        @*                             } *@
                        @*                         } *@
                        <input class="form-control form-control-sm" type="date" name="dob" value="abc" id="validationCustom08">
                    </div>
                </div>

                <!-- ROW EMAIL: required, email@address.domain  - PHONE: empty OR 8-10 numbers -->
                <div class="row for-input-row" style="font-weight: bold">
                    <div class="col-sm-6">
                        <label for="Email">Email</label>
                        <input class="form-control form-control-sm" type="text" name="email" value="abc" readonly>

                    </div>
                    <div class="col-sm-6">
                        <label for="StartedDate">Started Date</label>
                        <!-- set "date" value with format yyyy-MM-dd -->
                        <input class="form-control form-control-sm" type="date" name="startDate" value="abc" readonly>
                    </div>
                </div>

                <div class="row for-input-row">
                    <div class="col-sm-12 col-lg-12">
                        <button class="btn btn-outline-success" style="float: left;">Save Changes</button>
                    </div>
                </div>
            }
            <!-- END OF FORM ========================================================== -->
            <button class="btn btn-outline-danger" id="change-password-button" style="float: right;">Change Password</button>
        </div>
    </div>
</div>


<div class="modal fade" id="passwordModal" tabindex="-1" role="dialog" aria-labelledby="passwordModalLabel" aria-hidden="true" data-url="@Url.Action("ChangePasswordPartial", "Account")">
    @Html.Partial("~/Views/Partial/_ChangePassword.cshtml")
</div>



<div id="successModal" class="modal fade">
    <div class="modal-dialog modal-confirm">
        <div class="modal-content">
            <div class="modal-header">
                <div class="icon-box">
                    <i class="fas fa-check"></i>
                </div>
                <h4 class="modal-title">Success!</h4>
            </div>
            <div class="modal-body">
                <p class="text-center">Account Info Updated Successfully.</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-success btn-block" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>


